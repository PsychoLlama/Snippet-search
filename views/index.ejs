<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Home | Snippet Search</title>

  <!--styles-->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/styles/home.css">

</head>

<body>

<!--Navigation-->
<nav class="navbar navbar-default">

  <div class="container-fluid">

    <a href="/codeadded">
      <button class="btn btn-default navbar-btn">
        <span class="glyphicon glyphicon-pencil"></span> New
      </button>
    </a>
  </div>

</nav>

<!--Search field-->
<div class="jumbotron">
  <div class="container">

    <h1>Snippet Search</h1>

    <form class="input-group" action="/search"  method="POST">

      <input class="form-control" name="search" type="text" placeholder="Clearfix, Node server, etc...">


      <div class="input-group-btn">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>

    </form>

  </div>
</div>

<!--Snippet-->
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4">

      <div class="thumbnail">

        <pre><code><%= snipplets.body %></code></pre>

        <div class="caption">
          <h3><%= snipplets.title %></h3>

          <p><%= snipplets.desc%></p>
          <form action="/delete" method="post">
            <p>
              <button class="btn btn-danger" value="<%= snipplets.body%>" name="filetodelete" type="submit">Delete</button>
            </p>
          </form>
        </div>

      </div>

    </div>
  </div>
</div>

<!--scripts-->
<script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.8.0/highlight.min.js"></script>
<script src="/assets/scripts/validation.js"></script>
</body>

</html>
